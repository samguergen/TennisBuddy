<div class="section login">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Log In</h2>


    <form action="/sessions" method="post">
      <label>Username: </label><br>
      <input type='text' class='login-email' name='user[email]' ng-model="user.email"><br>
      <label>Password: </label><br>
      <input type='password' class='login-password' name='user[password]' ng-model="user.password"><br>
      <input type='submit' class='login-submit' ng-click="login()" value="Log in!">
    </form>


</div>

</div>
