<div class="content-container" ng-app="myApp" ng-controller="MainCtrl">

<div class="waiting"><h2> They are waiting on you! </h2></div>

<div class="table-responsive col-xs-12 col-sm-6 col-md-8">
<table class="table">


  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><div class="game-title"><%= link_to game.title, game %> </div><br>
          <div class="game-description"><%= game.description %></div>
        </td>
          <td>by: </td>

        <td><%= link_to 'Edit', edit_game_path(game) %> | <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="start-game"><a href="#" ng-click="reloadRoute('games/new')">Start a game</a></div>

</div>