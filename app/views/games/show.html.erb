<div class="content-container" ng-app="myApp" ng-controller="MainCtrl">

  <div class="game-detail-wrapper">
    <div class="game-detail-section">
      <div class="game-detail-head">
        <div class="player-img"></div>
        <div class="title"><%= @game.title %></div>
        <div class="potential-img"></div>
      </div>

      <div class="game-detail-body">
        <div class="left">
          <div class="info">
            <strong>Details:</strong><br>
            <%= @game.description %><br>
            by: <%= @user_game.first_name %>  <%= @user_game.last_name %>
          </div>
          <div class="score">
            <strong>Score:</strong>
            First game: <br>
            Second game: <br>
            Third game: <br>
            Total score: <%= @game.score %>
          </div>
        </div>
        <div class="middle">
          <div class="location-img"></div>
          <div class="suggested-locs"></div>
        </div>
        <div class="right">
          <div class="comms">
            <p>Comments</p>
            <% @game.comments.each do |comment| %>
              <p>
                <b>Commenter:</b>
                <%= comment.commenter %>
              </p>
              <p>
                <b>Comment:</b>
                <%= comment.body %>
              </p>
              <p>
                <a data-confirm="Are you sure?" data-method="delete" href="/games/<%= @game.id %>/comments/<%=comment.id%>" rel="nofollow">Destroy Comment</a>
              </p>
            <% end %>
          </div>
          <div class="new-comms ">
            <p>Add a comment:</p>
            <%= form_for([@game, @game.comments.build]) do |f| %>
              <div class="field">
                <%= f.label :commenter %><br />
                <%= f.text_field :commenter %>
              </div>
              <div class="field">
                <%= f.label :body %><br />
                <%= f.text_area :body %>
              </div>
              <div class="actions">
                <%= f.submit %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>



  <%= link_to 'Edit', edit_game_path(@game) %> |
  <%= link_to 'Back', games_path %>

  <!-- </div> -->
</div>