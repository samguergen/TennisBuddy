<div class="content-container" ng-app="myApp" ng-controller="MainCtrl">

<div class="show-wrapper">
<p><%= @game.title %></p>

<p><strong>Details:</strong><br>
  <%= @game.description %>
</p>
</div>

Game user is: <%= @game_user %>

<p>
  <strong>Score:</strong>
  <%= @game.score %>
</p>

<div class="comment-section">
    <p>Comments</p>
    <% @game.comments.each do |comment| %>
      <p>
        <b>Commenter:</b>
        <%= comment.commenter %>
      </p>

      <p>
        <b>Comment:</b>
        <%= comment.body %>
      </p>

      <p>
        <a data-confirm="Are you sure?" data-method="delete" href="/games/<%= @game.id %>/comments/<%=comment.id%>" rel="nofollow">Destroy Comment</a>

      </p>
    <% end %>

    <p>Add a comment:</p>
    <%= form_for([@game, @game.comments.build]) do |f| %>
      <div class="field">
        <%= f.label :commenter %><br />
        <%= f.text_field :commenter %>
      </div>
      <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
</div>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

</div>