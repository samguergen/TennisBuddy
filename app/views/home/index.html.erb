
<div class="all-content container">

  <div class="welcome-intro">
    <% if params[:sess] %>
    <%= session[:user_id]  %> well
    <% else %>
    Welcome to Tennis Buddy!
    <% end %>
  </div>

 sesh: <%= params[:sess] %>


<!-- tried to create nested ul for every group of priority, but ul would chain one after another instead of being nested/recursive.-->

<button style="height:50px; width: 100px" ng-click="ha = true">Click me</button>
<div ng-show="ha == true" ui-tree>
    <ul ui-tree-nodes="" ng-model="bigger"><li ui-tree-node ng-repeat="big in bigger"> Level: {{ $index }},
    <ul ng-repeat="b in big">
      <li> {{b}}
      </li></ul></div>
     <!--  <ul ng-repeat="b in big"> {{ b}} </ul></ul> -->

</div>


  <div class="section-wrapper" ng-hide="openLocationReq == true">

    <div class="section find-game"><a href="#" ng-click="reloadRoute()">Find a game</a></div>

    <div class="section start-game" id="myBtn"><a href="#" ng-click="openLocationReq = true; startModal(1); myStyle={display:'block'}">Start a game</div>

  </div>

  <div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">x</span>
    <p>

      <div class="main-content">
      <div class="location-question">
        <h1>Time for a Game</h1>
        Where are you located? <br>
        <form action="#">
        <input type="text" class="location-input" class="current-location" name="current-location" ng-model="desiredLoc"><br>
        <input class="submit-location" type="submit" value="Submit my Location" ng-click="startModal(2) "><br>
      </form>
        </div>
      </div>

    </p>
  </div>


<div id="mySecondModal" class="modal second-modal">

  <div class="modal-content">
    <span class="secondClose">x</span>
    <p>

      <div class="main-content">
      <div class="">
        <h1>GAME REQUEST</h1>
        Game title:  <br>
        Game location:  <br>
        Player 1:  <br>
        Player 2:  <br>
        Location: {{ desiredLoc}} <br>
        <form method="POST" action="/games">
          <input type="text" class="" class="current-location" name="current-location" ng-model="desiredLoc"><br>
          <input class="submit-location" type="submit" value="Create Game Request"><br>
        </form>
        </div>
      </div>

    </p>
  </div>

</div>

